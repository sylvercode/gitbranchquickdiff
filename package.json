{
  "name": "gitbranchquickdiff",
  "displayName": "GitBranchQuickDiff",
  "description": "",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.77.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Git Branch Quick Diff",
      "properties": {
        "gitbranchquickdiff.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Use Git Branch Quick Diff as diff gutter instead of VSCode defaut. The file of the ref will be use as base for the comparaison."
        },
        "gitbranchquickdiff.ref": {
          "type": "string",
          "default": "main",
          "description": "Name of the ref to use for comparaison. Variables subtition can be use."
        }
      }
    },
    "commands": [
      {
        "command": "gitbranchquickdiff.activate",
        "title": "Use GitBranchQuickDiff",
        "enablement": "!config.gitbranchquickdiff.enabled"
      },
      {
        "command": "gitbranchquickdiff.changeref",
        "title": "Set quick diff ref"
      },
      {
        "command": "gitbranchquickdiff.defaultref",
        "title": "Use default quick diff ref"
      },
      {
        "command": "gitbranchquickdiff.deactivate",
        "title": "Use VSCode default quick diff",
        "enablement": "config.gitbranchquickdiff.enabled"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "gitbranchquickdiff.activate",
          "group": "1_diff",
          "when": "!config.gitbranchquickdiff.enabled"
        },
        {
          "command": "gitbranchquickdiff.changeref",
          "group": "1_diff",
          "when": "config.gitbranchquickdiff.enabled"
        },
        {
          "command": "gitbranchquickdiff.defaultref",
          "group": "1_diff",
          "when": "config.gitbranchquickdiff.enabled"
        },
        {
          "command": "gitbranchquickdiff.deactivate",
          "group": "1_diff",
          "when": "config.gitbranchquickdiff.enabled"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.77.0",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.36.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "vscode-variables": "^0.1.3"
  }
}
